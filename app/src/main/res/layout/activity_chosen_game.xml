<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ChosenGame">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#c7bdb1"
        android:elevation="11dp">
        <ImageView
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:layout_margin="15sp"
            android:id="@+id/back_img"
            android:contentDescription="account"
            />
        <ImageView
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:src="@drawable/ic_videogame"
            android:layout_margin="15sp"
            android:contentDescription="logo"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SNES Game"
            android:gravity="start"
            android:letterSpacing="0.05"
            android:layout_gravity="center"
            android:fontFamily="@font/arcade_classics"
            android:textSize="26sp"
            android:textStyle="bold"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:src="@drawable/backgroundmariocropped"
                android:contentDescription="Backgroundimg"
                android:layout_gravity="top"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                android:paddingStart="35dp"
                android:paddingEnd="35dp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:gravity="start"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Super Mario World"
                    android:fontFamily="@font/arcade_classics"
                    android:textSize="32sp"
                    android:textStyle="bold"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#858585"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                android:paddingStart="35dp"
                android:paddingEnd="35dp"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:gravity="start">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Publisher : Nintendo"
                    android:fontFamily="@font/arcade_classics"
                    android:textSize="20sp"
                    android:textStyle="bold"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#858585"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Platform : Super Nintendo Entertainment System"
                    android:fontFamily="@font/arcade_classics"
                    android:textSize="20sp"
                    android:textStyle="bold"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#858585"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/arcade_classics"
                    android:text="Release date : November 21, 1990"
                    android:textSize="20sp"
                    android:textStyle="bold"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#858585"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/arcade_classics"
                    android:text="Genre : Platformer, action-adventure"
                    android:textSize="20sp"
                    android:textStyle="bold"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#858585"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                android:paddingStart="35dp"
                android:paddingEnd="35dp"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:gravity="start">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/arcade_classics"
                    android:text="
Super Mario World[a] is a 1990 platform game developed by Nintendo
 for the Super Nintendo Entertainment System (SNES).
The story follows Mario's quest to save Princess Toadstool and
Dinosaur Land from the series' antagonist Bowser and his minions,
 the Koopalings. The gameplay is similar to that of earlier Super
Mario games: players control Mario or his brother Luigi through a series
of levels in which the goal is to reach the goalpost at the end. Super
Mario World introduced Yoshi, a dinosaur who can eat enemies,
as well as gain abilities by eating the shells of Koopa Troopas."
                    android:textSize="16sp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
  </LinearLayout>