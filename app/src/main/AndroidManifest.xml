<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.consolegamelibrary">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ConsoleGameLibrary">
        <activity
            android:name=".IntoScreen"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ConsoleLibrary"
            android:exported="false"
            android:label="@string/title_activity_console_library"
            android:theme="@style/Theme.ConsoleGameLibrary.NoActionBar" />
        <activity
            android:name=".ChosenGame"
            android:exported="false"
            android:theme="@style/Theme.ConsoleGameLibrary.NoActionBar" />
        <activity
            android:name=".GameLibrary"
            android:exported="false"
            android:theme="@style/Theme.ConsoleGameLibrary.NoActionBar" />
        <activity
            android:name=".MainMenuActivity"
            android:exported="true">
        </activity>
    </application>

</manifest>